<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frameLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#9CC66C"
    android:foregroundTint="#6B986D"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="5sp"
        android:layout_gravity="center_horizontal"
        android:text="@string/tv"
        android:textSize="18sp"
        android:textAlignment="center"></TextView>

    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5sp"
        android:layout_gravity="center_horizontal"
        android:text="@string/timer"
        android:textSize="23sp"
        android:textAlignment="center"></TextView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="15sp"
        android:layout_weight="1.5"
        android:background="#4098D6DD"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_margin="15sp"
            android:foregroundTintMode="add"
            app:srcCompat="@android:drawable/radiobutton_off_background"
            app:tint="#277069" />

    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:orientation="vertical"
        android:gravity="center_horizontal|bottom">
        <TextView
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:layout_marginBottom="10sp"
            android:layout_marginRight="25sp"
            android:layout_marginLeft="25sp"
            android:text="@string/info"
            android:textSize="23sp"
            android:textAlignment="center"></TextView>

        <TextView
            android:id="@+id/feed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:layout_marginBottom="10sp"
            android:layout_marginRight="25sp"
            android:layout_marginLeft="25sp"
            android:text="@string/feed"
            android:textSize="16sp"
            android:textAlignment="center"></TextView>

        <Button
            android:id="@+id/btnSt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30sp"
            android:backgroundTint="#4A1515"
            android:shadowColor="#220402"
            android:text="@string/btnSt"
            android:textColor="#E8D0CE"></Button>
    </LinearLayout>
</LinearLayout>